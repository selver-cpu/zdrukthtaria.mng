    <script>
        // Funksioni për filtrimin e dokumenteve sipas kategorisë
        function showTab(kategoria) {
            const dokumentet = document.querySelectorAll('.dokument-item');
            const tabs = document.querySelectorAll('.flex.flex-wrap.-mb-px li a');
            
            // Hiq klasën active nga të gjitha tabs
            tabs.forEach(tab => {
                tab.classList.remove('active', 'border-indigo-600');
                tab.classList.add('border-transparent');
            });
            
            // Shto klasën active në tab-in e klikuar
            const activeTab = document.querySelector(`a[onclick="showTab('${kategoria}')"]`);
            if (activeTab) {
                activeTab.classList.add('active', 'border-indigo-600');
                activeTab.classList.remove('border-transparent');
            }
            
            // Filtro dokumentet
            dokumentet.forEach(dok => {
                if (kategoria === 'all' || dok.getAttribute('data-kategoria') === kategoria) {
                    dok.style.display = 'flex';
                } else {
                    dok.style.display = 'none';
                }
            });
        }
        
        document.addEventListener('DOMContentLoaded', function () {
            const fileInput = document.getElementById('dokument');
            const uploadButton = fileInput.closest('form').querySelector('button[type="submit"]');
            const errorContainer = fileInput.nextElementSibling.nextElementSibling; // The <x-input-error> component

            const allowedTypes = ['image/jpeg', 'image/png', 'application/pdf', 'application/msword', 'application/vnd.openxmlformats-officedocument.wordprocessingml.document', 'application/vnd.ms-excel', 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet'];
            const maxSize = 10 * 1024 * 1024; // 10MB in bytes

            fileInput.addEventListener('change', function(event) {
                const file = event.target.files[0];
                // Clear previous errors
                errorContainer.innerHTML = '';

                if (file) {
                    // Check file type
                    if (!allowedTypes.includes(file.type)) {
                        showError('Lloji i skedarit nuk lejohet.');
                        return;
                    }

                    // Check file size
                    if (file.size > maxSize) {
                        showError('Skedari e kalon madhësinë maksimale prej 10MB.');
                        return;
                    }

                    // If all checks pass
                    uploadButton.disabled = false;
                    uploadButton.classList.remove('opacity-25');

                } else {
                     uploadButton.disabled = true;
                     uploadButton.classList.add('opacity-25');
                }
            });

            function showError(message) {
                errorContainer.innerHTML = `<ul class="text-sm text-red-600 space-y-1"><li>${message}</li></ul>`;
                uploadButton.disabled = true;
                uploadButton.classList.add('opacity-25');
                fileInput.value = ''; // Reset file input
            }
        });
    </script>
